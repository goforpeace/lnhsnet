
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      // Allow access if the user is authenticated (anonymous or otherwise).
      return request.auth != null;
    }

    // Hero images are public to read, but only authenticated users can write.
    match /hero_images/{heroImageId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // Projects are public for everyone to read, but only authenticated users can write/update.
    match /projects/{projectId} {
      allow read: if true;
      allow create, update, delete: if isAuthenticated();
    }

    // Contact form can be written by anyone, but only authenticated users can read.
    match /contact_form_submissions/{submissionId} {
      allow create: if true;
      allow read, update, delete: if isAuthenticated();
    }

    // Call requests can be created by anyone, but only managed by authenticated users.
    match /call_requests/{requestId} {
      allow create: if true;
      allow read, update, delete: if isAuthenticated();
    }
    
    // SEO settings can be read by anyone, but only managed by authenticated users.
    match /seo_settings/{settingId} {
      allow read: if true;
      allow create, update, delete: if isAuthenticated();
    }

    // Admin roles collection is not used in the anonymous auth model.
    // Disabling client-side access for security.
    match /roles_admin/{userId} {
      allow read, write: if false;
    }
  }
}
