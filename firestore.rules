
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      // Allow admin access if you have a roles_admin collection.
      // For now, this is simplified.
      return request.auth != null && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // Hero images are public to read, but only admins can write.
    match /hero_images/{heroImageId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Projects are public for everyone to read and write.
    match /projects/{projectId} {
      allow read, write: if true;
    }

    // Contact form can be written by anyone, but only read by admins.
    match /contact_form_submissions/{submissionId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    // Admin roles can only be read by admins and cannot be changed from the client.
    match /roles_admin/{userId} {
      allow get, list: if isAdmin();
      allow write: if false;
    }
  }
}
